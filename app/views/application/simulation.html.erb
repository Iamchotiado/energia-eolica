<!DOCTYPE html>
  <head>
    
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>

  <body>
    <div class="container container-simulacion">
      <div class="row">
        <div class="col">
          <div id="parametros">
            <%= render 'coeficiente', coeficientes: @coeficientes %>
          </div>
        </div>
        <div class="col">


          
          <div class="form-sliders">
          <%= form_tag(simulation_path, method: 'GET', remote: true, class: 'form_busqueda') do %>
            <%= label_tag(:velocidad_entrada, "Ingrese velocidad de entrada del viento:") %>
            <input type="range" id="velocidad_entrada" name="velocidad_entrada" min="0" max="10" onchange="updateVelocidadInicial(this.value);">
            <input type="text" id="velocidad_inicial" value="">
            <br>

            <%= label_tag(:velocidad_salida, "Ingrese velocidad de salida del viento:") %>
            <input type="range" id="velocidad_salida" name="velocidad_salida" min="0" max="10" onchange="updateVelocidadFinal(this.value);">
            <input type="text" id="velocidad_final" value="">
            <br>

            <%= label_tag(:presion_entrada, "Ingrese presion de entrada a la turbina:") %>
            <input type="range" id="presion_entrada" name="presion_entrada" min="0" max="10" onchange="updatePresionInicial(this.value);">
            <input type="text" id="presion_inicial" value="">
            <br>

            <%= label_tag(:presion_salida, "Ingrese presion de salida de la turbina:") %>
            <input type="range" id="presion_salida" name="presion_salida" min="0" max="10" onchange="updatePresionFinal(this.value);">
            <input type="text" id="presion_final" value="">
            <br>
            <%= submit_tag("Calcular", class: 'btn btn-success') %>
          <% end %>
        </div>
        </div>
       
    </div>
  </div>
    
    
  </body>
</html>
<script>
  function updateVelocidadInicial(val) {
          document.getElementById('velocidad_inicial').value=val; 
        }

  function updateVelocidadFinal(val) {
          document.getElementById('velocidad_final').value=val; 
        }

  function updatePresionInicial(val) {
          document.getElementById('presion_inicial').value=val; 
        }

  function updatePresionFinal(val) {
          document.getElementById('presion_final').value=val; 
        }
</script>